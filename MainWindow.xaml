<Window x:Class="RunMyApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RunMyApp"
        mc:Ignorable="d" WindowStyle="None"
        Title="RunMyApp" Height="{Binding Height, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}" Width="{Binding Height, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}" AllowsTransparency="True" Loaded="Window_Loaded" Background="{x:Null}" WindowStartupLocation="CenterScreen" Topmost="True" ShowInTaskbar="False" ResizeMode="NoResize">
    <Image Width="{Binding Width, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}" Height="{Binding Height, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}" Source="{Binding Image, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}" MouseDown="Image_MouseDown" Stretch="Uniform" />
</Window>
